<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wei.mark.example">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StandOutExampleActivity"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".MultiWindow"></service>
        <service android:name=".SimpleWindow"></service>
        <service android:name=".MostBasicWindow"></service>
        <service android:name="WidgetsWindow"></service>
    </application>

</manifest>
